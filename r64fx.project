##
# Main project file for r64fx.
##

SRC = 
    main.cpp
    Image.cpp
    Window.cpp
    Window_SDL2.cpp
    BilinearCopy.cpp

configure: 
    ./conftool '@[PROJECT_COMPILER] @[INCLUDE_FLAGS] @[DEFS]' '@[SRC_DIR]' 'src' '@{SRC}'
    
@[src.rules]

hello : @[src.objects]
    echo "Linking hello..."
    @[PROJECT_COMPILER] @[src.objects] -o hello @[LINK_FLAGS]