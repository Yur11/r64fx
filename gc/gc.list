CPP_FILES = gc.cpp
    
configure
    echo "Configuring @{SUB_DIR}"
    ./conftool "@{PROJECT_COMPILER} -fPIC" "@{SRC_DIR}" "@{SUB_DIR}" "@{CPP_FILES}"

config         : configure
conf           : configure
cf             : configure
    
libgc.so: gc.make_rules @{gc_object_files}
    echo "Linking     libgc.so"
    @{PROJECT_COMPILER} -shared @{gc_object_files} -o libgc.so