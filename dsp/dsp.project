CPP_FILES =
    Graph.cpp
    Processor.cpp
    
configure
    echo "Configuring @{SUB_DIR}"
    ./conftool "@{PROJECT_COMPILER} -fPIC" "@{SRC_DIR}" "@{SUB_DIR}" "@{CPP_FILES}"

config         : configure
conf           : configure
cf             : configure
    
libdsp.so: dsp.make_rules @{dsp_object_files}
    echo "Linking     libdsp.so"
    @{PROJECT_COMPILER} -shared @{dsp_object_files} -o libdsp.so